# PostgreSQL Configuration (LOCAL DEVELOPMENT ONLY)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=oddiya
DB_USER=oddiya_user
DB_PASSWORD=oddiya_password_dev  # ONLY for local development - use AWS Secrets Manager in production

# Redis Configuration (t2.micro Redis)
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS Configuration (will use real values in production)
AWS_REGION=ap-northeast-2
S3_BUCKET=oddiya-storage-dev
SQS_QUEUE_URL=https://sqs.ap-northeast-2.amazonaws.com/123456789012/oddiya-video-jobs
SNS_TOPIC_ARN=arn:aws:sns:ap-northeast-2:123456789012:oddiya-notifications

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
USE_BEDROCK_MOCK=true

# OAuth Configuration (Auth Service)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
APPLE_CLIENT_ID=your_apple_client_id_here
APPLE_PRIVATE_KEY=your_apple_private_key_here

# JWT Configuration (Auth Service)
JWT_ACCESS_TOKEN_VALIDITY=3600
JWT_REFRESH_TOKEN_VALIDITY=1209600

# External APIs
KAKAO_REST_API_KEY=your_kakao_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
EXCHANGERATE_API_KEY=your_exchangerate_api_key_here

